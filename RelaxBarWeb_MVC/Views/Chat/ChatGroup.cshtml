                        $(".redtext").html("<a href='/Chat/RedDetail/" + mid + "'>查看领取详情</a>");
                    }
                    $(".redopen2").show();
                });
            } else {
                mid = $("#redopenid").val();
                RedClick(mid);
            }
        }
