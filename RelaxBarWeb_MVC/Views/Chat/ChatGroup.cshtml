        //发送个人名片
        function sendGRMP(id) {
            if (!confirm("是否发送给名片")) {
                return;
            }
            $.post("/chat/SendUserCard", "GID=" + gid + "&CID=" + id, function (data) {
                if (data.code == "1") {
                    $("#sendMyCardView").hide();
                } else {
                    alert(data.msg);
                }
            }, "json");
        }
        function RevokeMSG(mid) {
            if (confirm("是否撤回消息")) {
                $.post("/Chat/RevokeMSG", "TType=2&Gid=" + gid + "&MID=" + mid, function (data) {
                    if (data.code == "1") {
                        $("#" + mid).remove();
