                $(this).parents('.control-group').eq(0).before(lv1HTML);
            } else {
                if ($('.control-group.lv1:last').find($('input[name="lv1"]')).val().length == 0) {
                    alert("请添加规格名称");
                    return false;
                }
                last.after(lv1HTML);
            }
