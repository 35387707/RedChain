
@model RelexBarDLL.RedPacket
<div class="col-md-10 col-md-offset-2 form-group editItem">
    
    <div class="form-inline">
        <div class="col-md-3">标题：</div>@Html.TextBoxFor(m => m.title, new { @class = "form-control" })
    </div>
    @*<div class="form-inline">
        <div class="col-md-3">測試：</div>@Html.TextBoxFor(m => m.UID, new { @class = "form-control" })
    </div>*@
   <input type="hidden" value="@Model.UID" name="UID" id="UID" />
    <div class="">
        <div class="col-md-3">图片：</div>@Html.HiddenFor(m =>m.imglist) @Html.HiddenFor(m => m.RID)
        <input type="file" id="upload" style="display:none" onchange="HeadImgUpload(this)" />
        <img id="headimage" onclick="$('#upload').click()" src="@(string.IsNullOrEmpty(Model.imglist)?"/img/chat/head.jpg":Model.imglist)" style="width:86px" />
        <br />
    </div>

    <div class="form-inline">
        <div class="col-md-3">单价：</div>@Html.TextBoxFor(m => m.SinglePrice, new { @class = "form-control" })
    </div>
    <div class="form-inline">
         <div class="col-md-3">总价：</div>@Html.TextBoxFor(m => m.TotalPrice, new { @class = "form-control" })
    </div>

    @if (Model != null && Model.BeginTime != null)
    {
        <div class="form-inline">
            <div class="col-md-3">开始时间：</div>@Html.TextBox("BeginTime", Model.BeginTime.Value.ToString("yyyy-MM-dd HH:mm"), new { @class = "form-control", @readonly = "true" })
        </div>
    }
    @if (Model != null && Model.EndTime != null)
    {
        <div class="form-inline">
            <div class="col-md-3">结束时间：</div>@Html.TextBox("EndTime", Model.EndTime.Value.ToString("yyyy-MM-dd HH:mm"), new { @class = "form-control", @readonly = "true" })
        </div>
    }

    @*<div class="form-inline">
            <div class="col-md-2">状态：</div>@Html.TextBoxFor(m => m.Status, new { @class = "form-control" })
        </div>*@
</div>
