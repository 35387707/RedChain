
@model List<RelexBarDLL.UserHelp>
@for (int i = 0; i < Model.Count; i++)
{
    <tr>
        
            <td>@Model[i].Title</td>
            <td>@((Model[i].Type == 1) ? "常见问题" : "产品介绍")</td>
            @*<td>@Model[i].Type</td>*@
            <td>@Model[i].CreateTime</td>
            <td>
                <input type="button" class="btn btn-danger" value="@((Model[i].Status==1)?"启用":"禁用")" onclick="CUserHelpStatus('@Model[i].ID',this)" />
            </td>
            <td>
                <span class="btn-link" onclick="EditUserHelp('@Model[i].ID')"><i class="glyphicon glyphicon-edit"></i>编辑</span>

            </td>
            <td><span class="btn-link" onclick="UserHelpShow('@Model[i].ID')"><i class="glyphicon glyphicon-zoom-in"></i>查看详情</span></td>
        </tr>
}
<script>createFooter(@ViewData["sum"])</script>