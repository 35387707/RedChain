
@model List<RelexBarDLL.Role>
@for (int i = 0; i < Model.Count; i++)
{
    <tr>

        <td>@Model[i].Name</td>
        <td>@Model[i].CreateTime</td>
        <td>
            <input type="button" class="btn btn-danger" value="@((Model[i].Status==1)?"启用":"禁用")" onclick="CRoleStatus('@Model[i].ID',this)" />
        </td>
        
        <td>
            <span class="btn-link" onclick="EditRole('@Model[i].ID')"><i class="glyphicon glyphicon-edit"></i>编辑</span>

        </td>
    </tr>
                    }
<script>createFooter(@ViewData["sum"])</script>