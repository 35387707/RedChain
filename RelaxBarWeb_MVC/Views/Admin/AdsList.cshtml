
@model List<RelexBarDLL.AdsList>
@for (int i = 0; i < Model.Count; i++)
{
    <tr>
        <td>@Model[i].Name</td>
        <td>@Model[i].Title</td>
        <td>@Model[i].LinkTo</td>
        <td><img src="@Model[i].Img" style="width:86px" /></td>
        <td>@Model[i].Descrition</td>
        @*<td>@((Model[i].Sex == null || Model[i].Sex == 0) ? "男" : "女")</td>*@
        <td>@Model[i].BeginTime</td>
        <td>@Model[i].EndTime</td>

        <td>
            <input type="button" class="btn btn-danger" value="@((Model[i].Status==1)?"启用":"禁用")" onclick="CAdStatus('@Model[i].ID',this)" />
        </td>
        @*<td><span class="btn-link" onclick="bankShow('@Model[i].ID')">查看</span></td>
        <td>
            <input type="button" class="btn btn-danger" value="@((Model[i].Status==1)?"启用":"禁用")" onclick="CUStatus('@Model[i].ID',this)" />
        </td>
        <td>@Model[i].CreateTime</td>*@
        <td><span class="btn-link" onclick="EditUser('@Model[i].ID')"><i class="glyphicon glyphicon-edit"></i>编辑</span></td>
    </tr>
}
<script>createFooter(@ViewData["sum"])</script>
