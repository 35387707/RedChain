<script>
    var hasFooter = false;
    var RoleManager = {};
    RoleManager.searchKey = "";
    RoleManager.index = "";
    function createFooter(sum) {
        if (!hasFooter) {
            $(".pagination").createPage({

                totalPage:parseInt((sum-1)/10+1),
               // totalPage: 10,
                currPage: 1,
                backFn: function (p) {
                    GetRoleList(p);
                }
            });
            hasFooter = true;
        }

    }
    function toPage(index) {
        GetRoleList(index);
    };
    //获取管理权限列表
    function GetRoleList(index) {
        waiting();
        $.get("RoleList", "index=" + index, function (data) {
            RoleManager.index = index;
            $("#Adsbody").html(data);
            waitingHide();
        }, "html")
    }
    function USearch() {
        RoleManager.searchKey = $("#key").val();
        hasFooter = false;
        $(".pagination").html("");
        GetRoleList(1);
    }

    //更改角色状态
    function CRoleStatus(ID, e) {
        waiting();
        var status = 1;
        if (e.value == "启用")
        { status = 0; }
        $.post("CRolestatus", "ID=" + ID + "&status=" + status, function (data) {
            if (data.code == "1") {
                if (status == 1) {
                    e.value = "启用";
                } else {
                    e.value = "禁用";
                }
            } else {
                alert(data.msg);
            }
            waitingHide();
        }, "json")
    }

    function EditRole(id) {
        waiting();
        $.get("/Admin/EditRole/" + id, function (data) {
            $("#editAdsBody").html(data);

            $("#editPermission").show();
            $('body').css('overflow', 'hidden');
            waitingHide();
        }, "html")
    }

    function saveUserHelp() {
        var name = $("#Name").val().trim();
        if (name.length == 0) {
            alert("角色名称不能为空");
            return;
        }
        $.post("/Admin/DoEditRole", $("#editUserForm").serialize(), function (data) {

            if (data.code == "1") {
                alert(data.msg);
                GetRoleList(RoleManager.index);
            }
            else {
                alert(data.msg);
            }
        }, "json");
    }

</script>
